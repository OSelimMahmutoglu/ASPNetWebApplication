@using North.Models;
@model List<Categories>
@{
    ViewBag.Title = "Nortwind Ana Sayfa";
    Layout = "~/Views/_LayoutPage.cshtml";
}

<h1>Index</h1>
<div class="col-md-6 col-md-offset-3">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Kategori Adı</th>
                <th>Ürün Sayısı</th>
                <th>Detay</th>
            </tr>
        </thead>
        <tbody>
            @{int sayac=0;}
            @foreach (var item in Model)
            {
                sayac++;
                <tr>
                    <td>@sayac</td>
                    <td>@item.CategoryName</td>
                    <td>@item.Products.Count</td>
                    <td><a href="@Url.Action("Urunler","Kategori",new { id = item.CategoryID })" class="btn btn-block btn-info">Ürünler</a></td>
                </tr>
            }
            
        </tbody>
    </table>
</div>

