@model KategoriViewModel
@{
    ViewBag.Title = $"{Model.Ad} Kategorisini Düzenle";
    Layout = "~/Views/_AdminLayoutPage.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
          @* @(if(Model.Ad.Length > 50) { $"{Model.Ad} Kategori İşlemleri" })*@
    
    </h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-8 col-md-offset-2">
        <div class="panel panel-primary">
            <div class="panel-heading">
                Kategori Duzenle
                <span class="validation-summary-errors">@Html.ValidationSummary()</span>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Duzenle", "Kategori", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    
                    <div class="form-group">
                        @Html.LabelFor(x => x.Ad, new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Ad, new { @class = "form-control", placeholder = "Kategori Adı" })
                            @Html.ValidationMessageFor(x => x.Ad)
                        </div>
                    </div>
                    @Html.HiddenFor(x => x.Id)
                        <div class="form-group">
                            @Html.LabelFor(x => x.Aciklama, new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.Aciklama, new { @class = "form-control", placeholder = "Kategori Açıklaması" })
                            </div>
                        </div>
                        <div class="form-group">

                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-default">Kategori Güncelle</button>
                            </div>
                        </div>
                }

            </div>
            <div class="panel-footer">
                Panel Footer
            </div>
        </div>
    </div>
</div>

